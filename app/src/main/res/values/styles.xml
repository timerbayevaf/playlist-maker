<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="BaseLinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- Стиль для TextView в настройках -->
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <!-- Базовый стиль для Toolbar -->
    <style name="BaseToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="OutlineContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/background_input</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>

    </style>

    <style name="OutlineTextInputStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/input_tint_color</item>
        <item name="android:hint">#3772E7</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/input_tint_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TrackName">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ArtistDescription">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TrackSeparator">
        <item name="android:layout_marginStart">@dimen/icon_5</item>
        <item name="android:layout_marginEnd">@dimen/icon_5</item>
        <item name="android:tint">@color/gray</item>
    </style>


    <style name="TrackIconArrow">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="OutlineTextClearStyle">
        <item name="android:layout_width">@dimen/icon_36</item>
        <item name="android:layout_height">@dimen/icon_36</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@color/background_input</item>
        <item name='android:color'>@color/setting_icon_color</item>
        <item name='android:src'>@drawable/clear</item>
    </style>

    <style name="SearchErrorMessage">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchUpdateButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">@dimen/padding_normal</item>
        <item name="android:backgroundTint">@color/background_night</item>
        <item name="android:paddingStart">@dimen/icon_14</item>
        <item name="android:paddingEnd">@dimen/icon_14</item>
        <item name="android:paddingTop">@dimen/icon_10</item>
        <item name="android:paddingBottom">@dimen/icon_10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchNoConnectionImage">
        <item name="android:src">@drawable/search_no_connection_light</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchNothingFoundImage">
        <item name="android:src">@drawable/search_nothing_found_light</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TittleSearchHistory">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchButtonUpdate">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">@dimen/padding_normal</item>
        <item name="android:backgroundTint">@color/background_night</item>
        <item name="android:paddingStart">@dimen/icon_14</item>
        <item name="android:paddingEnd">@dimen/icon_14</item>
        <item name="android:paddingTop">@dimen/icon_10</item>
        <item name="android:paddingBottom">@dimen/icon_10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerPlayButton">
        <item name="android:src">@drawable/play_light</item>
        <item name="android:background">@drawable/round_button_light</item>
    </style>

    <style name="PlayerAddToPlaylistButton">
        <item name="android:src">@drawable/add_to_playlist_light</item>
        <item name="android:background">@drawable/round_button_light</item>
    </style>


    <style name="PlayerAddToFavoritesButton">
        <item name="android:src">@drawable/favorite_light</item>
        <item name="android:background">@drawable/round_button_light</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="PlayerTrackArtist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerTrackTime">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerTittle">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_small_title</item>
    </style>

    <style name="PlayerContent" >
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">@dimen/text_size_small_title</item>
    </style>

    <style name="MediaLibrariesFragment" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MediaLibrariesTablayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="background">@color/white</item>
        <item name="tabIndicatorColor">@color/background_night</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="tabSelectedTextColor">@color/background_night</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="tabIndicator">@drawable/tablayout_indicator</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="itemIconTint">@drawable/bottom_navigation_tab_bar</item>
        <item name="itemTextColor">@drawable/bottom_navigation_tab_bar</item>
    </style>

    <style name="CardViewCreateNewPlaylist">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="HeaderNewPlaylist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="PlaylistHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">@color/playlist_edit_text_outline</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:hint">@string/playlist_name</item>
        <item name="android:textColor">@color/background_night</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="PlaylistEditTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PlaylistHintTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="PlaylistEditText">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

    <style name="PlaylistButtonCreate">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:background">@drawable/playlist_button_create</item>
        <item name="backgroundTint">@color/playlist_create_playlist</item>
    </style>

    <style name="PlaylistContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BottomSheet">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="PlaylistViewName">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistCountTrack">
        <item name="android:textColor"> @color/gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="HeaderBottomSheet">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="RounderBottomSheet">
        <item name="android:background">@drawable/rounder</item>
        <item name="android:backgroundTint">@color/background_input</item>
    </style>


    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- кнопки -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>
</resources>