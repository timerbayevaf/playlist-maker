<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TrackName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ArtistDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TrackSeparator">
        <item name="android:layout_marginStart">@dimen/icon_5</item>
        <item name="android:layout_marginEnd">@dimen/icon_5</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TrackIconArrow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchErrorMessage">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="OutlineTextClearStyle">
        <item name="android:layout_width">@dimen/icon_36</item>
        <item name="android:layout_height">@dimen/icon_36</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@color/background_input</item>
        <item name='android:color'>@color/setting_icon_color</item>
        <item name='android:src'>@drawable/clear_night</item>
    </style>

    <style name="SearchUpdateButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">@dimen/padding_normal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">@dimen/icon_14</item>
        <item name="android:paddingEnd">@dimen/icon_14</item>
        <item name="android:paddingTop">@dimen/icon_10</item>
        <item name="android:paddingBottom">@dimen/icon_10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchNoConnectionImage">
        <item name="android:src">@drawable/search_no_connection_night</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchNothingFoundImage">
        <item name="android:src">@drawable/search_nothing_found_night</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>