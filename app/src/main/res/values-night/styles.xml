<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TrackName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ArtistDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TrackSeparator">
        <item name="android:layout_marginStart">@dimen/icon_5</item>
        <item name="android:layout_marginEnd">@dimen/icon_5</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TrackIconArrow">
        <item name="android:tint">@color/white</item>
    </style>

</resources>