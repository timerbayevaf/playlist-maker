<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medialibraries.ui.detailed.MedialibrariesDetailedPlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_input"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="360dp"
            android:textColor="@color/background_night"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Toolbar "Назад" -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/back_night"
            style="@style/BackArrowFromPlaylist"
            app:navigationIconTint="@color/black"
            />

        <TextView
            android:id="@+id/playlistName"
            style="playlist_details_text"
            android:textColor="@color/background_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistImage"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/playlistDetails"
            style="playlist_details_text"
            android:textColor="@color/background_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistName"
            tools:text="Details about Playlist" />

        <TextView
            android:id="@+id/playlistMinutes"
            style="playlist_details_text"
            android:textColor="@color/background_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistDetails"
            tools:text="300 минут" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/playlist_ic_circle_black"
            app:layout_constraintBottom_toBottomOf="@id/playlistMinutes"
            app:layout_constraintStart_toEndOf="@id/playlistMinutes"
            app:layout_constraintTop_toTopOf="@id/playlistMinutes" />

        <TextView
            android:id="@+id/playlistTracks"
            style="playlist_details_text"
            android:textColor="@color/background_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/divider"
            app:layout_constraintTop_toBottomOf="@id/playlistDetails"
            tools:text="98 треков" />

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/playlist_ic_share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistMinutes" />

        <ImageView
            android:id="@+id/iconMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:src="@drawable/playlist_ic_menu"
            app:layout_constraintStart_toEndOf="@id/iconShare"
            app:layout_constraintTop_toBottomOf="@id/playlistMinutes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/standardBottomSheet"
        style="@style/BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="false"
        app:behavior_peekHeight="228dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/RounderBottomSheet"
            />

        <TextView
            android:id="@+id/messageEmptyList"
            style="playlist_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/ys_display_light"
            android:text="@string/playlist_is_empty"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/bottom_sheet"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottomSheetMenuDetails"
        style="@style/BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/padding_normal"
        app:behavior_hideable="true"
        app:behavior_peekHeight="505dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            style="@style/RounderBottomSheet"
            />

        <LinearLayout
            android:id="@+id/menuPlaylistInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playlistCoverImageSheet"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_playlist_cover_small"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/playlistNameSheet"
                    style="@style/PlaylistViewBigText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="14dp"
                    tools:text="Best Songs 2021" />

                <TextView
                    android:id="@+id/numberOfTracksSheet"
                    style="@style/TrackArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    tools:text="N треков" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sharePlaylist"
            style="@style/PlaylistDetailsBottomSheetMenu"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/playlist_details_share" />

        <Button
            android:id="@+id/editPlaylist"
            style="@style/PlaylistDetailsBottomSheetMenu"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:text="@string/playlist_details_edit_info" />

        <Button
            android:id="@+id/deletePlaylist"
            style="@style/PlaylistDetailsBottomSheetMenu"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:text="@string/playlist_details_delete" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>