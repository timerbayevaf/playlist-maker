<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/playlistImage"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:background="@drawable/rounded_playlist_cover_small"
        style="@style/PlaylistContainer"
        android:clipToOutline="true"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_marginBottom="@dimen/icon_padding"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="bottom"
        android:singleLine="true"
        style="@style/PlaylistViewName"
        android:text="Name"/>

    <TextView
        android:id="@+id/countTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:singleLine="true"
        android:maxLines="1"
        style="@style/ArtistCountTrack"
        android:text="N tracks"/>
</LinearLayout>